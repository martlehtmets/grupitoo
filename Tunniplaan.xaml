                    <GridViewItem>TM105</GridViewItem>
                    <GridViewItem>TM159</GridViewItem>
                    <GridViewItem>M310</GridViewItem>
                </GridView>
            </PivotItem>
            <PivotItem Header="Vabad klassid">
                <GridView>
                    <GridViewItem>PM218</GridViewItem>
                    <GridViewItem>PM217</GridViewItem>
                    <GridViewItem>TM104</GridViewItem>
                    <GridViewItem>TM103</GridViewItem>
                </GridView>
            </PivotItem>
            <PivotItem Header="Õpetajad">
                <GridView>
                    <GridViewItem>Priit Paap</GridViewItem>
